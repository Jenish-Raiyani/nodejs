        <div class="home-content" style="background-color: rgb(255, 255, 255);">
         
           
        <div class="container" >

      {{#if message}}
          <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> {{message}}
        </div>
      {{/if}}
     
            
        <table class="table table-bordered"   width="100%" cellspacing="0"  id="tbBook">
        <thead>
            <tr>
                 
                <th>ISBN</th>
                <th>Title</th>
                <th>Authors</th>
                <th>Add Location</th>
                <th>Status</th>
              
            </tr>
        </thead>
 
        <tbody>
         
     
      
       
         
         {{#each Bookdata}} 
       <form action="/booklocation/updatelocation/{{this.bookid}}" method="POST" id="myForm" > 

            <tr >
             
      
                 
                <td><input type="text" value="{{this.ISBN}}"  name="isbn"   disabled></td>
                <td><input type="text" value="{{this.title}}"  name="title" disabled></td>
                <td  style="display:none;"><input type="text" value="{{this.rowid}}"  name="rowid"></td>
                 
              
               
                 
                <td>
                  
                    <div class="form-group">
                                                 
                      <select class="form-control select" name="location" value={{this.location}} required >
                          <option value="T1 - S2"  > T1 - S2</option>
                          <option value="T5 - S3">T5 - S3</option>
                          <option value="T3 - S2">T3 - S2</option>

                      </select>
                                               
                    </div>
                </td>
          
                  <td>
                      <div class="form-group">
                          <select class="form-control select" name="status" value={{this.status}} >
                              <option value="Available">Available</option>
                              <option value="Issued">Issued</option>
                          </select>
                    </div>
                    </td>
                  
                   

                        <td><button type="submit" class="btn btn-primary btnDelete" >Update</button></td>
                        


   
              </tr>
         
           </form> 

          {{/each}}
         
          

   
       

        

        </tbody>
    </table>
        
       </div>
        </div>
        
      </section>
          <script> 
             $("#tbBook").on('click', '.btnDelete', function (event) {
               
                document.getElementById("myForm").submit();         
